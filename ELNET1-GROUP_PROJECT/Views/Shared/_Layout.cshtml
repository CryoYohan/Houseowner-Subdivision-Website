<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Landing</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/output.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/css/output.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header class="bg-white shadow-md px-6 py-4">
        <nav>
            <div class="flex items-center justify-between">
                <!-- Logo Section -->
                <a href="#" class="block">
                    <img src="~/images/subvi-logo.png" class="h-12 pl-4" alt="Subvi Logo">
                </a>
                <div class="flex items-center space-x-10 pr-4 text-blue-800">
                    <a href="#"><i class="fas fa-bell text-xl hover:text-blue-500"></i></a>
                    <a href="#"><i class="fas fa-user-circle text-xl hover:text-blue-500"></i></a>
                    <a href="#"><i class="fas fa-moon text-xl hover:text-blue-500"></i></a>
                </div>
            </div>
        </nav>
    </header>
    <div class="content">
        <div class="h-screen bg-gray-800 pt-2 z-50">
            <div class="bg-white rounded-tr-2xl rounded-br-2xl shadow-md h-full w-56 py-6">
                <ul class="space-y-4">
                    <!-- Home -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 rounded-l-full hover:bg-gray-100 transition">
                            <i class="fas fa-home text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Home</span>
                        </a>
                    </li>

                    <!-- Calendar -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 bg-gray-100 rounded-l-full">
                            <i class="fas fa-calendar-alt text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Calendar</span>
                        </a>
                    </li>

                    <!-- Facilities -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 rounded-l-full hover:bg-gray-100 transition">
                            <i class="fas fa-building text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Facilities</span>
                        </a>
                    </li>

                    <!-- Bill Payment -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 rounded-l-full hover:bg-gray-100 transition">
                            <i class="fas fa-file-invoice-dollar text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Bill Payment</span>
                        </a>
                    </li>

                    <!-- Services -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 rounded-l-full hover:bg-gray-100 transition">
                            <i class="fas fa-tools text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Services</span>
                        </a>
                    </li>

                    <!-- Forums -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 rounded-l-full hover:bg-gray-100 transition">
                            <i class="fas fa-comments text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Forums</span>
                        </a>
                    </li>

                    <!-- Feedbacks -->
                    <li>
                        <a href="#" class="flex items-center space-x-4 p-3 rounded-l-full hover:bg-gray-100 transition">
                            <i class="fas fa-bullhorn text-blue-800 text-xl"></i>
                            <span class="text-blue-800 font-semibold">Feedbacks</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
